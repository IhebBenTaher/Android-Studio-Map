<resources>

    <!-- ThÃ¨me global de l'application -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyle">@style/CustomButton</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="colorPrimary">@color/primary</item> <!-- Primary color for the top bar -->
        <item name="colorPrimaryDark">@color/primary</item> <!-- Primary color for the status bar -->
        <item name="colorAccent">@color/primary</item> <!-- Accent color -->
    </style>


    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="CustomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>
